page {
	background: #F7F8FA;
	position: relative;
}

page .container {
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
	background: #F7F8FA;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	box-sizing: border-box;
}

.headerView {
	width: 100%;
	height: auto;
	background-color: #FFFFFF;
}

.headerSearch {
	width: 90%;
	height: auto;
	margin: 0 auto;
}

.headerSearch .headerSearchBtn {
	width: 85%;
	display: inline-block;
}

.van-field__input {
	font-size: 16px !important;
}

.headerSearch .select-wrap {
	width: 15%;
	float: right;
}


.tabs {
	width: 100%;
	color: #4A4A4A;
	padding-bottom: 18px;
	box-sizing: border-box;
}

.tabs .van-tabs__wrap {
	background-color: #FFFFFF !important;
	width: 85%;
	padding-left: 3%;
	box-sizing: border-box;
}

.van-tab--active .van-tab__title {
	color: #FF5437 !important;
	font-size: 14px !important;
}

.van-tab .van-tab__title {
	font-size: 14px;
	color: #4A4A4A;
}

.van-tabs {
	width: 90%;
	height: auto;
	display: list-item;
}

.van-hairline--top-bottom:after {
	border-width: 0 !important;
}

