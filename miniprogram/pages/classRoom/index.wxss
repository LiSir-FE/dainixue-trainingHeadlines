page {
    background: #F7F8FA;
}

page .container {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    background: #F7F8FA;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    box-sizing: border-box;
}

.curriculumView {
    width: 100%;
    height: 100%;
}

.nav .van-nav-bar {
    background-color: #FFFFFF !important;
}

/* .van-nav-bar .van-nav-bar__title{
    font-size: 14px !important;
} */

.van-hairline--bottom:after {
    border-bottom-width: 0px !important;
}

.bookView {
    width: 100%;
    height: auto;
    /* margin: 10px auto; */
    border-radius: 10px;
}

.bookView .bookViewItem {
    width: 100%;
    position: relative;
    background-color: #FFFFFF;
    display: flex;
    display: -webkit-flex;
    justify-items: center;
    align-items: center;
    padding: 10px 0 10px 15px;
    margin: 2px 0;
    box-sizing: border-box;
    /* background-color: #FFFFFF !important; */
}

.bookViewItem:nth-child(1) {
    margin-top: 1px;
}

.bookViewItem .bookViewItems {
    flex: 1;
}

.bookViewItem .bookViewItems:nth-child(2) {
    flex: 5;
}

.bookViewItems .bookViewItemsImage {
    width: 80px;
    height: 80px;
    display: block;
    border-radius: 5px;
    margin: 0 10px 0 5px;
    box-sizing: border-box;
}

.bookViewItems .bookViewItemsTitle {
    font-size: 16px;
    font-weight: 500;
    color: #000000
}

.bookViewItems .bookViewItemsTime {
    font-size: 12px;
    color: #999;
    line-height: 24px;
}

.bookViewItemsTime .bookViewItemsTimeIcon {
    font-size: 15px;
    display: inline-block;
    position: relative;
    top: 3px;
}


.bookViewItemsTime .bookViewItemsTimeText {
    display: inline-block;
    /* padding-left: 5px; */
    box-sizing: border-box;
}

.bookViewItems .bookViewItemsDesc {
    font-size: 12px;
    color: #FF5437;
    line-height: 22px;
}

.bookViewItems .bookViewItemsTeacher {
    font-size: 12px;
    color: #000000;
    font-weight: 500;
}

.bookViewItems .bookViewItemsAplayIcon {
    font-size: 18px;
    color: #F9684D;
    float: right;
}

.bookViewItem .bookViewItems:nth-child(3) {
    position: absolute;
    right: 20px;
    top: 5px;
}

