.dialog-text {
	font-size: 12px;
	color: #333333;
	text-align: center;
	position: relative;
	top: -20px;
}


button::after {
	border: none;
}


.work-input-panel {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 88rpx;
	line-height: 88px;
	background: #fff;
	border-radius: 10px;
	margin-top: 10px;
}

.work-input-title {
	width: 24px;
	height: 24px;
	padding: 12px 13px;
	display: block;
}


.work-input {
	height: 100%;
	font-size: 28rpx;
	flex-grow: 1;
	flex-shrink: 1;
	line-height: 88rpx;
}

.placeholder-class {
	font-family: PingFangSC-Regular;
	font-size: 28rpx;
	color: #ccc;
	letter-spacing: 0;
	line-height: 28rpx;
}