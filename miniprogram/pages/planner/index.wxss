/* miniprogram/pages/planner/index.wxss */
.container {
	width: 100%;
	padding: 0;
	margin: 0;
	background: #F7F8FA;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	box-sizing: border-box;
}

.backgroundBg {
	width: 100%;
	margin-bottom: 100rpx;
	display: block;
}

.botomBtn {
	width: 100%;
	height: 200rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	border-top-left-radius: 10px;
	border-top-right-radius: 10px;
	background-color: #FFFFFF;
}

.bottomBtnLeft{
	width: 50%;
	float: left;
	line-height: 200rpx;
	font-size: 12px;
	color: #FF6F57;
}

.bottomBtnLeft .bottomBtnLeftVip{
	float: left;
	font-size: 16px;
	width: 50%;
	text-align: right;
}

.bottomBtnLeftVip text{
	font-size: 22px;
}

.bottomBtnLeft .bottomBtnLefts{
	float: left;
	width: 50%;
	text-align: center;
	font-size: 10px;
	color: #FF5437;
	text-decoration: line-through;
	padding: 5px 0 0 0;
    box-sizing: border-box;
}


.bottomBtnRight{
	width: 50%;
	float: left;
	height: 100%;
}

/* 去除button默认样式 */

button::after{ 
	border: none; 
}

button {
	background-color: transparent;
	padding-left: 0;
	padding-right: 0;
	line-height:inherit;
	outline: 0;
	border-radius:0;
}

button[disabled]{
	background-color: transparent !important;
}

.bottomBtnRight .trunkLine-done-button {
	color: #FFFFFF;
    font-size: 14px;
    line-height: 60rpx;
    background-image: linear-gradient(-229deg, #F8316C 16%, #F9684D 100%);
	background-color: red;
    border-radius: 30px;
    position: absolute;
    bottom: 30px;
}