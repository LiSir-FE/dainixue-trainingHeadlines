/* components/realTimeInfo/realTimeInfo.wxss */
page .container {
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	box-sizing: border-box;
}

.viewFor {
	background-color: #FFFFFF;
	margin: 2px 0;
	box-sizing: border-box;
}

.headerTitle {
	width: 90%;
	padding: 10px 0;
	box-sizing: border-box;
	background-color: #FFFFFF;
	margin: 0 auto;
}

.headerTitle .headerTitles {
	font-size: 16px;
	color: #333333;
	display: inline-block;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	width: 100%;
}

.headerTitle .headerTitleText {
	font-size: 16px;
	color: #333333;
	width: 500rpx;
	float: left;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.iconText {
	width: 90%;
	margin: 0 auto;
	display: inline-block;
	padding-top: 8px;
	box-sizing: border-box;
}

.iconText .iconTextTop {
	font-size: 10px;
	color: #E4536B;
	border-radius: 2px;
	float: left;
	padding-right: 5px;
	box-sizing: border-box;
	background: rgba(228, 83, 107, 0.1);
}

.iconText .iconTextSource {
	font-size: 10px;
	color: #999999;
	padding-left: 5px;
	float: left;
	box-sizing: border-box;
}



.nullPageView {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}


.bannerStyle {
	width: 200px;
	display: block;
}