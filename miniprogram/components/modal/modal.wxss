/* components/modal/modal.wxss */
.modal-container{
	width: 100vw;
	height: 100%;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 9999;
	background: rgba(192, 192, 192, 0.9);
}

.modal-container .modal-view{
	width: 70%;
	margin: 2px 15%;
    background: #fff;
    border-radius: 30px;
    line-height: 55px;
    text-align: center;
	display: inline-block;
}

.modal-container .modal-view:nth-child(3){
	color: red;
}

.modalView{
	width: 100%;
	position: fixed;
	bottom: 30px;
}