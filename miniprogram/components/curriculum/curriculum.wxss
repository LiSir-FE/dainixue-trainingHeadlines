/* miniprogram/pages/collection/index.wxss */
page{
	background: #F7F8FA;
}

page .container {
	width: 100%;
	height: 100%;
	padding: 0;
	margin: 0;
	background: #F7F8FA;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	box-sizing: border-box;
  }

.nav .van-nav-bar{
    background-color: #FFFFFF !important;
}

/* .van-nav-bar .van-nav-bar__title{
    font-size: 14px !important;
} */

.van-hairline--bottom:after{
    border-bottom-width: 0px !important;
}

.bookView{
    width: 100%;
    height: auto;
    /* margin: 10px auto; */
    border-radius: 10px;
}

.bookView .bookViewItem{
	width: 100%;
	position: relative;
    background-color: #FFFFFF;
    display: flex;
    display: -webkit-flex;
    justify-items: center;
    /* align-items: center; */
	padding: 15px 10px;
    margin: 10rpx 0;
    box-sizing: border-box;
    flex-direction: row;
    /* background-color: #FFFFFF !important; */
}

.bookViewItem:nth-child(1) {
	margin-top: 1px;
}

/* .bookViewItem .bookViewItems{
}
.bookViewItem .bookViewItems:nth-child(1){
    width: 30%;
} */

.bookViewItem .bookViewItems:nth-child(2){
    width: 50%;
    margin: 0 10px;
    box-sizing: border-box;
    position: relative;
}

.bookViewItem .bookViewItems:nth-child(3){
    width: 10%;
    display: flex;
    justify-items: center;
    align-items: center;
    flex-direction: row;
}

.bookViewItems .bookViewItemsImage{
    display: block;
    width: 120px;
    /* height: 80px; */
    border-radius: 5px;
    box-sizing: border-box;
}

.bookViewItems .bookViewItemsTitle{
    width: 100%;
    font-size: 16px;
    font-weight: 500;
    color:#000000;
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.bookViewItems .bookViewItemsTime{
    font-size: 12px;
    color:#999;
    line-height: 24px;
}

.bookViewItemsTime .bookViewItemsTimeIcon{
    font-size: 15px;
    display: inline-block;
    position: relative;
    top: 3px;
}

.bookViewItemsTime .bookViewItemsTimeText{
    display: inline-block;
    /* padding-left: 5px; */
    box-sizing: border-box;
}

.bookViewItems .bookViewItemsDesc{
    font-size: 12px;
    color:#FF5437;
    line-height: 16px;
    width: 100%;
    margin-top: -5rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.bookViewItems .bookViewItemsTeacher{
    font-size: 12px;
    color:#000000;
    font-weight: 500;
    position: absolute;
    bottom: 0;
}

.bookViewItems .bookViewItemsAplayIcon{
    font-size: 18px;
	color: #F9684D;
	float: right;
}

.recommend{
    width: 44px;
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}

